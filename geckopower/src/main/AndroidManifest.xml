<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="org.mozilla.rocket.geckopower"
    split="geckopower">

    <dist:module
        dist:onDemand="true"
        dist:title="@string/feature_module_gecko_power">
        <dist:fusing include="true" />
    </dist:module>

    <application>
        <activity android:name="org.mozilla.rocket.privatebrowsing.PrivateActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
    </application>
</manifest>
