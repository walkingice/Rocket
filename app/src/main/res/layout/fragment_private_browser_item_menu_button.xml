<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fixed_menu_height"
    android:layout_gravity="center_horizontal|bottom"
    android:background="@color/privateBackground"
    tools:background="#0000FF">

    <org.mozilla.focus.widget.EqualDistributeGrid
        android:id="@+id/browser_screen_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/browser_fixed_menu_horizontal_margin"
        android:layout_marginStart="@dimen/browser_fixed_menu_horizontal_margin">

        <org.mozilla.focus.tabs.TabCounter
            android:id="@+id/btn_tab_tray"
            style="@style/MainMenuButton"
            app:drawableColor="@color/colorMenuIconDarkForeground" />

        <ImageButton
            android:id="@+id/btn_open_new_tab"
            style="@style/MainMenuButton"
            android:tint="@color/private_menu_button"
            app:srcCompat="@drawable/action_add" />

        <ImageButton
            android:id="@+id/btn_search"
            style="@style/MainMenuButton"
            android:tint="@color/private_menu_button"
            app:srcCompat="@drawable/action_search" />

        <ImageButton
            android:id="@+id/btn_load"
            style="@style/MainMenuButton"
            android:tint="@color/private_menu_button"
            app:srcCompat="@drawable/ic_refresh" />

        <ImageButton
            android:id="@+id/btn_next"
            style="@style/MainMenuButton"
            android:tint="@color/private_menu_button"
            app:srcCompat="@drawable/action_next" />

    </org.mozilla.focus.widget.EqualDistributeGrid>
</FrameLayout>

