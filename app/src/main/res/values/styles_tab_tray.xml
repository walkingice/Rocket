<resources>
    <attr name="tabTrayAppearance" format="reference" />
    <attr name="colorTabTrayBackgroundStart" format="color" />
    <attr name="colorTabTrayBackgroundEnd" format="color" />

    <style name="TabTrayNormalStyle">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorTabTrayBackgroundStart">?themeGradientStart</item>
        <item name="colorTabTrayBackgroundEnd">?themeGradientEnd</item>
    </style>

    <style name="TabTrayPrivateStyle">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorTabTrayBackgroundStart">#FF9400FF</item>
        <item name="colorTabTrayBackgroundEnd">#FFFF1AD9</item>
    </style>

</resources>
